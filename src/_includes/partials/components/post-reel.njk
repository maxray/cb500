{% if postListItems.length %}
  <section class="[ post-list  ] [ pad-top-700 gap-bottom-900 ]">
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <h2 class="[ post-list__heading ] [ text-700 md:text-800 ]">{{ postListHeading }}</h2>
      <ol class="[ post-list__items post-reel ]  [ pad-top-300 ]" reversed>
        {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="[ post-reel__item ] [ sf-flow ]">
            <img src="{{ item.data.featureImage }}" />
              <h4 class="font-base leading-tight text-500 weight-mid">
                <a href="{{ item.url }}" class="post-reel__link" rel="bookmark">{{ item.data.title }}</a>
              </h4>
              <p class="text-400 gap-top-300 weight-mid">
                <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
              </p>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
